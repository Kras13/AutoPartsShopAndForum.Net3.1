@section Scripts
        {
    <script>
        var ChangeQuantity = function (ItemId) {
            var itemQuantity = $("#QuantityInput").val();

            $.ajax({
                type: "GET",
                url: "/Cart/ChangeProduct",
                data: { id: ItemId, quantity: itemQuantity },
                success: function () {
                    location.reload();
                }
            });
        }
    </script>
}
