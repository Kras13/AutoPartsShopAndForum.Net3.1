@model ProductModel

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> <img id="main-image" src="@Model.ImageUrl" width="250" /> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-long-arrow-left"></i> <span class="ml-1">
                                        <a href="javascript:history.back()" class="btn-outline-info">Back</a>
                                    </span>
                                </div> <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3">
                                <h5 class="text-uppercase">@Model.Name</h5>
                                <div class="price d-flex flex-row align-items-center">
                                    <span class="act-price">@Model.Price leva</span>
                                </div>
                            </div>
                            <div class="about">@Model.Description</div>
                            <div class="cart mt-4 align-items-center">
                                <a class="btn btn-danger float-right"
                                   asp-controller="Cart" asp-action="Add"
                                   asp-route-id="@Model.Id"
                                   asp-route-name="@Model.Name"
                                   asp-route-price="@Model.Price"
                                   asp-route-quantity="1">Add to cart</a>
                                <i class="fa fa-heart text-muted"></i> <i class="fa fa-share-alt text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>