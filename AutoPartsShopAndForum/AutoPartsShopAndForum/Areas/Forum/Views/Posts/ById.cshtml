@using AutoPartsShopAndForum.Services.Data.Forum
@model PostModel

@{
    this.ViewData["Title"] = Model.Title;
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="d-flex flex-column col-md-8">
            <div class="d-flex flex-row align-items-center text-left comment-top p-2 bg-white border-bottom px-4">
                <div class="d-flex flex-column-reverse flex-grow-0 align-items-center votings ml-1"><i class="fa fa-sort-up fa-2x hit-voting"></i><i class="fa fa-sort-down fa-2x hit-voting"></i></div>
                <div class="d-flex flex-column ml-3">
                    <div class="d-flex flex-row post-title">
                        <h5>@Model.Title</h5>
                    </div>
                    <div class="d-flex flex-row align-items-center align-content-center post-title">
                        <span>@Model.CreatedOn</span>
                    </div>
                </div>
            </div>
            <div class="coment-bottom bg-white p-2 px-4">
                <div class="d-flex flex-row add-comment-section mt-4 mb-4">
                    <input type="text" class="form-control mr-3" placeholder="Add comment">
                    <button class="btn btn-primary" type="button">Comment</button>
                </div>
                @{
                    var modelsInArr = Model.Comments.ToArray();
                    var firstComment = modelsInArr[0];
                    var secondComment = modelsInArr[1];
                    var thirdComment = modelsInArr[2];
                }

                <div class="commented-section mt-lg-5 border border-primary">
                    <div class="d-flex flex-row align-items-center commented-user">
                        <h5 class="mr-2">Samoya Johns</h5><span class="dot mb-1"></span><span class="mb-1 ml-2">Date of create</span>
                    </div>
                    <div class="comment-text-sm"><span></span>@firstComment.Content</div>

                    <div class="d-flex flex-row align-items-center commented-user">
                        <h5 class="mr-2">Samoya Johns</h5><span class="dot mb-1"></span><span class="mb-1 ml-2">Date of create</span>
                    </div>
                    <div class="comment-text-sm"><span></span>@secondComment.Content</div>
                </div>

                <div class="commented-section mt-lg-5 border border-primary">
                    <div class="d-flex flex-row align-items-center commented-user">
                        <h5 class="mr-2">Samoya Johns</h5><span class="dot mb-1"></span><span class="mb-1 ml-2">Date of create</span>
                    </div>
                    <div class="comment-text-sm"><span></span>@thirdComment.Content</div>
                </div>
            </div>
        </div>
    </div>
</div>
