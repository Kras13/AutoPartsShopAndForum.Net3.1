@using AutoPartsShopAndForum.Areas.Forum.Models

@model PostInputModel

    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
    tinymce.init({
            selector: "textarea",
            plugins: [
                "image paste table link code media"
            ]
        });</script>

    <form method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" id="Title" class="form-control" placeholder="Post title here...">
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" id="Content" class="form-control" rows="6" placeholder="Your post here..."></textarea>
            <span asp-validation-for="Content" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Categories"></label>
            <select asp-for="PostCategoryId" class="form-control">
                @foreach (var subCategory in Model.Categories)
                {
                    <option value="@subCategory.Id">@subCategory.Name</option>
                }
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Save" />
    </form>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }