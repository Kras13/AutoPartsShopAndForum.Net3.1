@using AutoPartsShopAndForum.Areas.Forum.Models
@model ICollection<PostSummaryViewModel>

@{
    ViewData["Title"] = "Forum post";
}

@if (Model != null)
{

    <ul class="list-group">
        @foreach (var post in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <h4><a asp-controller="Posts" asp-action="ById" asp-route-id="@post.Id">@post.Title</a></h4>
                <span class="badge badge-primary badge-pill">@post.CommentsCount</span>
            </li>
        }
    </ul>


}